{
  "name": "mdslider",
  "version": "1.0.0",
  "description": "使用 marp 转换 markdown 为幻灯片,支持 html, pdf",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf public",
    "copy": "mkdirp public && ncp src/assets public/assets",
    "build": "pnpm run copy && marp",
    "build-pdf": "pnpm run copy && marp --pdf --pdf-notes",
    "build-all": "pnpm run copy && marp --pdf --pdf-notes && marp",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/someok/mdslider.git"
  },
  "keywords": [
    "marp",
    "slider"
  ],
  "author": "JX Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/someok/mdslider/issues"
  },
  "homepage": "https://github.com/someok/mdslider#readme",
  "devDependencies": {
    "@marp-team/marp-cli": "^1.4.1",
    "markdown-it-mark": "^3.0.1",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@marp-team/marp-core": "^2.2.0",
    "markdown-it-table-of-contents": "^0.5.2"
  }
}
